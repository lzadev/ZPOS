
@{
    ViewData["Title"] = "Categorías";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h5>Administrar categorías</h5>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">Categorías</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <!--card-->
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <a class="btn btn-primary font-weight-bold text-white justify-content-end" id="btnLoadFormCreateCategory">Agregar categoría</a>
                </div>
                <div class="card-body table-responsive" id="divCategories">
                    <!--List of products here-->
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

<!-- Modal Create Catgory -->
<div class="modal fade" id="modal-create-category" tabindex="-1" role="dialog" aria-hidden="true">

</div>

<!-- Modal Edit Category -->
<div class="modal fade" id="modal-edit-category" tabindex="-1" role="dialog" aria-hidden="true">

</div>
<script src="~/js/Cagetories.js"></script>
@section Scripts{ 
    <script>
        $(document).ready(function () {
            GetCategories().then(categories => {
                $("#divCategories").html(categories);
            }).catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error
                });
            });
        });

        $("#btnLoadFormCreateCategory").click(function () {

            LoadFormCreateCategory().then(form => {
                $("#modal-create-category").html(form);

                $("#modal-create-category").modal("show");
            }).catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error
                });
            });
        });

    </script>
}





