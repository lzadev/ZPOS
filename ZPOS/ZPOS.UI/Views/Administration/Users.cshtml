
@{
    ViewData["Title"] = "Usuarios";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h5>Administrar usuarios</h5>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Inicio</a></li>
                    <li class="breadcrumb-item active">Usuarios</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content pl-4 pr-4">
    <div class="row">
        <div class="col-12 p-0">
            <!--card-->
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <a class="btn btn-primary font-weight-bold text-white justify-content-end" id="btnLoadFormCreateUser">Agregar usuario</a>
                </div>
                <div class="card-body table-responsive" id="divUsers">
                    <!--List of products here-->
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

<!-- Modal Create ususer -->
<div class="modal fade" id="modal-create-user" tabindex="-1" role="dialog" aria-hidden="true">

</div>

<!-- Modal Edit user -->
<div class="modal fade" id="modal-edit-user" tabindex="-1" role="dialog" aria-hidden="true">

</div>


<script src="~/js/Users.js"></script>
@section Scripts{
    <script>
        $(document).ready(function () {
            GetUsers().then(users => {
                $("#divUsers").html(users);
            }).catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error
                });
            });
        });

        $("#btnLoadFormCreateUser").click(function () {

            LoadFormCreateUser().then(form => {
                $("#modal-create-user").html(form);

                $("#modal-create-user").modal("show");
            }).catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error
                });
            });
        });

    </script>
}

